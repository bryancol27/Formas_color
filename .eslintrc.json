{
    "extends": "next/core-web-vitals",
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    },
    "settings": { "react": { "version": "detect" } }
}
